<form action="/poems/edit/<%=@poem.id%>" method="post">
  <input type="text" name="title" placeholder="Title" value="<%= @poem.title %>">
  <textarea name="comment" form="form" rows="10" placeholder="Your Opus Here"><%= @poem.content %></textarea>
  <input type="submit" title="submit" value="Post">
</form>
